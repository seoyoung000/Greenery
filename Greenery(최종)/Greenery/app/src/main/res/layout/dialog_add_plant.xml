<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="식물 이름"
            android:fontFamily="@font/nanumbarunpen_r"/>

        <EditText
            android:id="@+id/speciesEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="식물 종"
            android:fontFamily="@font/nanumbarunpen_r"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물 주기 간격"
            android:fontFamily="@font/nanumbarunpen_r"/>

        <RadioGroup
            android:id="@+id/radioGroupWaterInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioEveryXDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X일마다"
                android:fontFamily="@font/nanumbarunpen_r"/>

            <RadioButton
                android:id="@+id/radioSpecificDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특정 요일마다"
                android:fontFamily="@font/nanumbarunpen_r"/>
        </RadioGroup>

        <Spinner
            android:id="@+id/spinnerDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutDaysOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/checkMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="월요일"
                android:fontFamily="@font/nanumbarunpen_r"/>
            <CheckBox
                android:id="@+id/checkTuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="화요일"
                android:fontFamily="@font/nanumbarunpen_r"/>

            <CheckBox
                android:id="@+id/checkWednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수요일"
                android:fontFamily="@font/nanumbarunpen_r"/>
            <CheckBox
                android:id="@+id/checkThursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="목요일"
                android:fontFamily="@font/nanumbarunpen_r"/>
            <CheckBox
                android:id="@+id/checkFriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="금요일"
                android:fontFamily="@font/nanumbarunpen_r"/>
            <CheckBox
                android:id="@+id/checkSaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="토요일"
                android:fontFamily="@font/nanumbarunpen_r"/>
            <CheckBox
                android:id="@+id/checkSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일요일"
                android:fontFamily="@font/nanumbarunpen_r"/>
        </LinearLayout>

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 선택"
            android:fontFamily="@font/nanumbarunpen_r"/>
    </LinearLayout>
</ScrollView>
