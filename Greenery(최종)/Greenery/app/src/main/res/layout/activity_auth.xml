<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/authMainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/nanumbarunpen_r"/>


        <Button
            android:id="@+id/goSignInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="회원가입"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:visibility="gone"
            android:fontFamily="@font/nanumbarunpen_r"/>

        <EditText
            android:id="@+id/authEmailEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:visibility="gone"
            android:fontFamily="@font/nanumbarunpen_r"/>

        <EditText
            android:id="@+id/authPasswordEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="비밀번호 - 6자 이상"
            android:inputType="textPassword"
            android:visibility="gone"
            android:fontFamily="@font/nanumbarunpen_r"/>

        <LinearLayout
            android:id="@+id/linearLayoutSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:fontFamily="@font/nanumbarunpen_r">

            <Button
                android:id="@+id/signBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="가입"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"
                android:visibility="visible"
                android:fontFamily="@font/nanumbarunpen_r"/>

            <Button
                android:id="@+id/signCancelBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="가입 취소"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"
                android:visibility="visible"
                android:fontFamily="@font/nanumbarunpen_r"/>
        </LinearLayout>


        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="로그인"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:visibility="gone"
            android:fontFamily="@font/nanumbarunpen_r"/>

        <Button
            android:id="@+id/googleLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/common_google_signin_btn_icon_dark"
            android:text="구글계정으로 로그인"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:visibility="gone"
            android:fontFamily="@font/nanumbarunpen_r"/>

    </LinearLayout>

</FrameLayout>