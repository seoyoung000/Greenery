<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.greenery" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowFullscreen">true</item>

        <item name="colorPrimary">@color/colorPrimary</item> <!-- 기본 색상 -->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item> <!-- 변형 색상 -->
        <item name="colorOnPrimary">@android:color/white</item> <!-- 기본 색상 위의 텍스트 색상 -->
        <item name="colorSecondary">@color/colorAccent</item> <!-- 보조 색상 -->
        <item name="colorOnSecondary">@android:color/black</item> <!-- 보조 색상 위의 텍스트 색상 -->
    </style>

    <style name="greeneryFont">
        <item name="android:fontFamily">@font/nanumbarunpen_r</item> <!-- 사용자 정의 폰트 -->
    </style>
</resources>